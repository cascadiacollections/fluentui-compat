{
    // Jest configuration specific to this package
    "jest.autoRun": "off",
    "jest.runMode": "on-demand",
    "jest.rootPath": ".",
    "jest.jestCommandLine": "npx jest --runInBand --no-coverage",
    "jest.autoEnable": true,
    
    // Package-specific settings
    "typescript.preferences.includePackageJsonAutoImports": "on",
    "eslint.workingDirectories": ["."],
    
    // Override global settings for this package if needed
    "files.exclude": {
        "node_modules": true,
        "dist": true,
        "temp": true,
        ".rush": true,
        "rush-logs": true
    }
}