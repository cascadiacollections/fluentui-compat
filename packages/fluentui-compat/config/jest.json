{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/test/setupTests.ts"],
  "testMatch": ["<rootDir>/test/**/*.test.ts", "<rootDir>/test/**/*.test.tsx"],
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.d.ts"
  ],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  }
}